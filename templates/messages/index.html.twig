{% extends 'base.html.twig' %}

{% block title %}Hello FriendsController!{% endblock %}
    {% block stylesheets %}
        {{ encore_entry_link_tags('messagesstyle') }}
    {% endblock %}
    {% block javascripts %}
        {{ encore_entry_script_tags('messageDisplay') }}
        {{ encore_entry_script_tags('app') }}
    {% endblock %}

{% block body %}
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js"></script>
    {% include 'navbar/index.html.twig' %}
    <div class="container-fluid d-flex justify-content-start align-items-center border border-2 text-white bg-black">
        Inbox
        Send
    </div>

    <div id="leftDiv" class="border-end border-2 w-25 text-white p-3 vh-100">
        {% for messages in message %}
            <div class="message border-bottom p-2" data-user="{{ messages|serialize(format ='json') }}">
                <p>{{ messages.fromUser }}</p>
                <p>{{ messages.title }}</p>
                <p>{{ messages.description }}</p>
            </div>
        {% endfor %}
    </div>

    <div id="rightDiv" class="container-fluid position-absolute text-black bg-white border border-2 w-75 vh-100">
        <div id="test" class="d-flex  h-100 ">
            <div class="form-group">
                <label for="toUser"></label>
                <h6></h6>

                <label for="title"></label>
                <h4></h4>

                <label for="description"></label>
                <h5></h5>
            </div>
        </div>
    </div>


{% endblock %}

