{% extends 'base.html.twig' %}

{% block title %}User{% endblock %}

{% block body %}
    {% include 'navbar/index.html.twig' %}

    <div class="container">
        <div class="row h-75 w-50">
            <div class="col-sm-6 bg-white d-flex justify-content-center align-items-center flex-column ">
                {% if avatar %}
                    <img class="rounded-circle h-50 w-50 p-2 m-2  border"
                         src="{{ asset('uploads/avatars/' ~ user.avatar) }}" alt="Avatar">
                {% else %}
                    <p>Brak </p>
                {% endif %}
                <div class="col-sm">
                    <i class="fa-solid fa-signature"></i>
                    <input type="text"  readonly id="username" value="{{ user.username }}">
                </div>
                <div class="col-sm">
                    <i class="fa-regular fa-envelope"></i>
                    <input type="email" readonly id="email" value="{{ user.email }}">
                </div>
            </div>
            <div class="col-sm-6 bg-dark-subtle d-flex justify-content-center align-items-center flex-column">
                <div class="col-sm">
                    <i class="fa-regular fa-comment" style="color: #ffffff;"></i>
                    <input type="text" class="m-2" readonly id="description" value="{{ user.description }}">
                </div>
                <div class="col-sm">
                    <i class="fa-solid fa-dumbbell" style="color: #ffffff;"></i>
                    <input type="email" class="m-2" readonly id="workout" value="{{ user.workout }}">
                </div>
                <div class="col-sm">
                    <i class="fa-solid fa-calendar" style="color: #ffffff;"></i>
                    <input type="email" class="m-2" readonly id="training_days" value="{{ user.trainingDays }}">
                </div>
                <div class="btn-group " role="group">
                    <a class="btn btn-light" href="{{ path('app_user_profile_index') }}">back</a>
                    {% if app.user == user %}
                        <a class="btn btn-light" href="{{ path('app_user_profile_edit', {'id': user.id}) }}">edit</a>
                        {{ include('user_profile/_delete_form.html.twig') }}
                    {% endif %}
                </div>

            </div>
        </div>
    </div>

{% endblock %}
