{% extends 'base.html.twig' %}

{% block title %}Hello FriendsController!{% endblock %}
{% block body %}
    {% include 'navbar/index.html.twig' %}
    {% for notice in app.flashes('success') %}
        {{ notice }}
    {% endfor %}
    {% block stylesheets %}
        {{ encore_entry_link_tags('friendsstyle') }}
    {% endblock %}
    {% block javascripts %}
        {{ encore_entry_script_tags('messageForm') }}
        {{ encore_entry_script_tags('app') }}
    {% endblock %}
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js"></script>


    <div id="friendsDiv" class="container-fluid d-flex justify-content-center p-3">
        {% for friendData in friends %}
            <div class="card  text-nowrap h-50 w-75 m-1">
                <div class="card-body text-black bg-white">
                    <h5 class="card-title">{{ friendData.friends }}</h5>
                    <h6 class="card-subtitle mb-2 text-info">Friends</h6>
                    <a href="#" class="card-link">
                        <button id="message" type="button" class="btn btn-dark" data-bs-toggle="messenger"
                                data-bs-target="#messenger">
                            <i class="far fa-envelope fa-lg"></i>
                        </button>
                    </a>
                </div>
            </div>
        {% endfor %}
    </div>
    <div class="pagination d-flex justify-content-end text-info">
        {{ knp_pagination_render(
            friends,
            '@KnpPaginator/Pagination/twitter_bootstrap_v4_pagination.html.twig'
        ) }}
    </div>




{% endblock %}
