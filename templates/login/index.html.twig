{# templates/login/index.html.twig #}
{% extends 'base.html.twig' %}
{% block html %}
<!doctype html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    {% block stylesheets %}
        {{  parent() }}
        {{ encore_entry_link_tags('loginstyle') }}

    {% endblock %}

    {% block javascripts %}

        {{ encore_entry_script_tags('app') }}

    {% endblock %}

</head>
{% endblock %}
{% block body %}

   {% if error %}
        <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    <div id="loginForm" class=" d-flex justify-content-center align-items-center border border-dark border-4 rounded-3 "style="background-image: url('{{ asset('storage/image0_0.jpg') }}'); background-size: cover;" >
    <form action="{{ path('app_login') }}" method="post" class="d-flex flex-column align-items-center">
        <p id="login" class="justify-content-center  p-3" > Login </p>
        <label class="text-dark p-3" for="username" >Username</label>
        <input id="inputs" class="form-control  " type="text" id="username" name="_username" value="{{ last_username }}">

        <label class="text-dark p-3" for="password">Password</label>
        <input  id="inputs" class ="form-control" type="password" id="password" name="_password">

        {# If you want to control the URL the user is redirected to on success
        <input type="hidden" name="_target_path" value="/account"> #}

        <button id="signup" class="btn bg-white border border-dark m-5 w-75" type="submit" >Sign Up</button>
    </form>
    </div>



{% endblock %}
