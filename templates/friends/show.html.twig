{% extends 'base.html.twig' %}

{% block title %}Hello FriendsController!{% endblock %}
{% block body %}
    {% include 'navbar/index.html.twig' %}
    {% for notice in app.flashes('success') %}
        {{ notice }}
    {% endfor %}
    {% block stylesheets %}
        {{ encore_entry_link_tags('friendsstyle') }}
    {% endblock %}
    {% block javascripts %}
        {{ encore_entry_script_tags('messageForm') }}
        {{ encore_entry_script_tags('app') }}
    {% endblock %}
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js"></script>


    <div id="friendsDiv" class="container-fluid d-flex justify-content-end p-3 ">
        <div id="test" class="container-fluid border-start text overflow-y-scroll">
            <h5 class="text-black">Friends</h5>
            <br>
            {% for friend in friends %}
                <div id="test2" class=" container-fluid border-white border-bottom d-flex justify-content-between">
                    {{ friend.friends }}
                    <button id="message" type="button" class="btn btn-dark" data-bs-toggle="messenger"
                            data-bs-target="#messenger">
                        <i class="far fa-envelope fa-lg"></i>
                    </button>
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}
