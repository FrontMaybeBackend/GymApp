{% extends 'base.html.twig' %}

{% block title %}Hello FriendsController!{% endblock %}
{% block body %}
    {% include 'navbar/index.html.twig' %}
    {% for notice in app.flashes('success') %}
        {{ notice }}
    {% endfor %}
    {% block javascripts %}
        {{ encore_entry_script_tags('app') }}
    {% endblock %}
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js"></script>

    <div class="container d-flex justify-content-end p-3" style="height: 400px">
        <div class="border-start p-3 text overflow-y-scroll" style="width: 200px">
            <h5>Friends</h5>
            <br>
            {% for friendData in friends %}
                <p class="border-white border-bottom">
                    {{ friendData.friends }}
                   <button type="button" class="btn btn-dark" data-bs-toggle="messenger" data-bs-target="#messenger">
                       <i class="far fa-envelope fa-lg mb-0"></i>
                   </button>
                </p>
            {% endfor %}
        </div>
    </div>





{% endblock %}