{% extends 'base.html.twig' %}

{% block title %}Hello FriendsController!{% endblock %}
{% block body %}
    {% include 'navbar/index.html.twig' %}
    {% for notice in app.flashes('success') %}
        {{ notice }}
    {% endfor %}
    {% block stylesheets %}
        {{ encore_entry_link_tags('friendsstyle') }}
    {% endblock %}
    {% block javascripts %}
        {{ encore_entry_script_tags('messageForm') }}
        {{ encore_entry_script_tags('app') }}
    {% endblock %}
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet">
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js"></script>


    <div class="container p-3 ">
        <div class="row border-end border-bottom border-start ">
            <div id="test" class="col-8 text-white p-3">
                <form method="POST" action="{{ path('app_messages_send') }}"
                      class="form d-flex flex-column align-items-baseline">
                    <label for="toUser">Username</label>
                    <input type="text" name="toUser" id="toUser" value="{{ username }}" readonly required>
                    <label for="title">Title</label>
                    <input class="w-100" type="text" name="title" id="title" required >
                    <label for="description">Description</label>
                    <textarea class="form-control textarea" id="description" name="description" rows="3" required></textarea>
                    <button class="btn btn-success m-1" type="submit">Send</button>
                </form>
            </div>
        </div>
    </div>



{% endblock %}