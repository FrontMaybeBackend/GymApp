{% extends 'base.html.twig' %}

{% block title %}Hello FriendsController!{% endblock %}
{% block body %}
    {% include 'navbar/index.html.twig' %}
    {% for notice in app.flashes('success') %}
        {{ notice }}
    {% endfor %}
    {% block stylesheets %}
        {{ encore_entry_link_tags('appstyle') }}
    {% endblock %}
    {% block javascripts %}
        {{ encore_entry_script_tags('messageForm') }}
    {% endblock %}
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js"></script>




    <div id="friendsDiv" class="container d-flex justify-content-end p-3">
        <div class="" style="    left: -45vw;
    top: 15px;
    position: relative;">
            <form id="formo">
                <div class="mb-3">
                    <label for="exampleInputEmail1" class="form-label">Email address</label>
                    <input type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp">
                    <div id="emailHelp" class="form-text">We'll never share your email with anyone else.</div>
                </div>
                <div class="mb-3">
                    <label for="exampleInputPassword1" class="form-label">Password</label>
                    <input type="password" class="form-control" id="exampleInputPassword1">
                </div>
                <div class="mb-3 form-check">
                    <input type="checkbox" class="form-check-input" id="exampleCheck1">
                    <label class="form-check-label" for="exampleCheck1">Check me out</label>
                </div>
                <button type="submit" class="btn btn-primary">Submit</button>
            </form>
        </div>


        <div class="border-start p-3 text overflow-y-scroll" style="width: 200px">
            <h5 class="text-black">Friends</h5>
            <br>
            {% for friendData in friends %}
                <p class="border-white border-bottom">
                    {{ friendData.friends }}
                    <button onclick="myFunction()" id="buttonix" type="button" class="btn btn-dark" data-bs-toggle="messenger" data-bs-target="#messenger">
                        <i class="far fa-envelope fa-lg mb-0"></i>
                    </button>
                </p>
            {% endfor %}
        </div>
    </div>


{% endblock %}
