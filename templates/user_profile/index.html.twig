{% extends 'base.html.twig' %}

{% block title %}User index{% endblock %}

{% block body %}
    {% include 'navbar/index.html.twig' %}

    <table class="table align-middle mb-0 bg-white">
        <thead class="bg-light">
        <tr>
            <th>Id</th>
            <th>Username</th>
            <th>Email</th>
            <th>Description</th>
            <th>Workout</th>
            <th>Training_days</th>
            <th>actions</th>
        </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td>{{ user.id }}</td>
                <td>{{ user.username }}</td>
                <td>{{ user.email }}</td>
                <td>{{ user.description }}</td>
                <td>{{ user.workout }}</td>
                <td>{{ user.trainingDays }}</td>
                <td>
                    <a href="{{ path('app_user_profile_show', {'username': user.username}) }}">show</a>
                    <a href="{{ path('app_user_profile_edit', {'id': user.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="10">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
